source 'https://rubygems.org'

# Use Jekyll 4.x since jekyll-scholar requires it
gem "jekyll", "~> 4.3.2"
gem "webrick", "~> 1.8"
gem "kramdown-parser-gfm"

# Bibliography specific gems
gem "bibtex-ruby", "~> 6.0.0"
gem "citeproc-ruby", "~> 1.1.3"
gem "csl-styles", "~> 1.0.1.11"
gem "csl", "~> 1.6.0"

# Plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-scholar", "~> 7.1.0"
  gem "jekyll-sitemap"
end